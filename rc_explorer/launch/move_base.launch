<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="sim" default="false" doc="true for simulation, false otherwise"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />

  <!-- move_base node -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- Load from ROS Parameter Server -->
    <rosparam file="$(find rc_explorer)/param/move_base_params.yaml" command="load" />
    <!-- <rosparam file="$(find rc_explorer)/param/base_local_planner_params.yaml" command="load" /> -->
    <rosparam file="$(find rc_explorer)/param/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find rc_explorer)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find rc_explorer)/param/costmap_common_params_waffle.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rc_explorer)/param/costmap_common_params_waffle.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rc_explorer)/param/global_costmap_params_waffle.yaml" command="load" />
    <rosparam file="$(find rc_explorer)/param/local_costmap_params_waffle.yaml" command="load" />

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>

    <param name="TrajectoryPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>

</launch>